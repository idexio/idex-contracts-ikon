{
  "name": "@idexio/idex-contracts-ikon",
  "version": "0.9.0",
  "description": "Collects source code, tests, and documentation for the IDEX Ikon release Solidity contracts",
  "homepage": "https://github.com/idexio/idex-contracts-ikon",
  "repository": "https://github.com/idexio/idex-contracts-ikon",
  "license": "MIT",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "directories": {
    "lib": "build/lib"
  },
  "files": [
    "artifacts/contracts/libraries/ClosureDeleveraging.sol/ClosureDeleveraging.json",
    "artifacts/contracts/libraries/Depositing.sol/Depositing.json",
    "artifacts/contracts/libraries/Funding.sol/Funding.json",
    "artifacts/contracts/libraries/IndexPriceMargin.sol/IndexPriceMargin.json",
    "artifacts/contracts/libraries/MarketAdmin.sol/MarketAdmin.json",
    "artifacts/contracts/libraries/NonceInvalidations.sol/NonceInvalidations.json",
    "artifacts/contracts/libraries/OraclePriceMargin.sol/OraclePriceMargin.json",
    "artifacts/contracts/libraries/PositionBelowMinimumLiquidation.sol/PositionBelowMinimumLiquidation.json",
    "artifacts/contracts/libraries/PositionInDeactivatedMarketLiquidation.sol/PositionInDeactivatedMarketLiquidation.json",
    "artifacts/contracts/libraries/Trading.sol/Trading.json",
    "artifacts/contracts/libraries/Transferring.sol/Transferring.json",
    "artifacts/contracts/libraries/WalletExitAcquisitionDeleveraging.sol/WalletExitAcquisitionDeleveraging.json",
    "artifacts/contracts/libraries/WalletExitLiquidation.sol/WalletExitLiquidation.json",
    "artifacts/contracts/libraries/WalletInMaintenanceAcquisitionDeleveraging.sol/WalletInMaintenanceAcquisitionDeleveraging.json",
    "artifacts/contracts/libraries/WalletInMaintenanceLiquidation.sol/WalletInMaintenanceLiquidation.json",
    "artifacts/contracts/libraries/Withdrawing.sol/Withdrawing.json",
    "build/lib",
    "build/typechain-types"
  ],
  "scripts": {
    "build": "yarn build:sol && yarn build:ts",
    "build:clean": "rm -rf build && rm -rf artifacts && rm -rf cache && rm -rf typechain-types",
    "build:sol": "hardhat compile",
    "build:ts": "tsc -p .",
    "test:coverage": "COVERAGE=1 hardhat coverage && node bin/get-badges.js && git add assets/",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "setup:git:hooks": "git config --local core.hooksPath .githooks || echo 'Not a git repository, did not set up git hooks'",
    "test": "COVERAGE=1 hardhat test"
  },
  "dependencies": {
    "ethers": "6.8.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@pythnetwork/pyth-sdk-solidity": "^2.4.0",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "bignumber.js": "^9.1.2",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "commitlint": "^17.7.2",
    "dotenv": "^10.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "hardhat": "2.18.3",
    "hardhat-contract-sizer": "^2.8.0",
    "mkdirp": "^3.0.1",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "8.3.2",
    "typescript": "^5.2.2"
  }
}
